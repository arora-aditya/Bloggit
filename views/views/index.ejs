<% include ./partials/header %>

<div class="ui container">
    <h1>INDEX PAGE</h1>
    <% if(Object.keys(blogs).length === 0){ %>
        <p>Sorry, no blogs available!</p>
    <% } else{ %>
        <% blogs.forEach(function(blog){ %>
            <div class="ui item">
                <p><%= blog.title %></p>
                <p><img src="<%= blog.image %>"></p>
                <p><%= blog.body %></p>
                <p><%= blog.created %></p>
                <p><a href="/blogs/<%= blog._id%>">More Info!</a></p>
                <p><a href="/blogs/<%= blog._id%>/edit">Edit this post</a></p>
            </div>
        <% }) %>
    <% } %>
</div>

<% include ./partials/footer %>